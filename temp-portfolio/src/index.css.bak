/* Import Raleway font */
@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@250;300;400;500;600;700&display=swap');

/* Base styles */
html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  font-family: 'Raleway', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: #000000;
  color: #f0f0f0;
}

/* Colors */
.bg-primary { background-color: #272727; }
.bg-secondary { background-color: #FFA500; }
.bg-card-bg { background-color: #1A1A1A; }
.bg-hover { background-color: #2A2A2A; }
.text-primary { color: #c0c0c0; }
.text-secondary { color: #FFA500; }
.text-text-primary { color: #c0c0c0; }
.text-text-secondary { color: #c0c0c0; }
.text-white { color: #c0c0c0; }
.text-black { color: black; }
.bg-white { background-color: white; }
.bg-black { background-color: black; }
.bg-gray-200 { background-color: #e5e7eb; }
.bg-transparent { background-color: transparent; }
.border-white { border-color: white; }
.from-orange-500 { --tw-gradient-from: #f97316; }
.from-yellow-400 { --tw-gradient-from: #facc15; }
.to-yellow-400 { --tw-gradient-to: #facc15; }
.to-yellow-300 { --tw-gradient-to: #fde047; }
.to-purple-400 { --tw-gradient-to: #c084fc; }
.to-purple-500 { --tw-gradient-to: #a855f7; }
.bg-gradient-to-r { background-image: linear-gradient(to right, var(--tw-gradient-from), var(--tw-gradient-to)); }
.bg-gradient-to-br { background-image: linear-gradient(to bottom right, var(--tw-gradient-from), var(--tw-gradient-to)); }
.bg-clip-text { -webkit-background-clip: text; background-clip: text; }
.text-transparent { color: transparent; }

/* Navigation styles */
.nav-item {
  position: relative;
  display: inline-flex;
  align-items: center;
}

.nav-item::before {
  content: 'â€¢';
  display: inline-block;
  margin-right: 8px;
  color: #FFA500;
}

/* Component Sizing */
.w-6 { width: 1.5rem; }
.h-6 { height: 1.5rem; }
.w-8 { width: 2rem; }
.h-8 { height: 2rem; }
.w-10 { width: 2.5rem; }
.h-10 { height: 2.5rem; }
.w-12 { width: 3rem; }
.h-12 { height: 3rem; }
.w-16 { width: 4rem; }
.h-16 { height: 4rem; }
.w-20 { width: 5rem; }
.h-20 { height: 5rem; }
.w-24 { width: 6rem; }
.h-24 { height: 6rem; }
.w-36 { width: 9rem; }
.h-36 { height: 9rem; }
.w-full { width: 100%; }
.h-full { width: 100%; }
.w-0 { width: 0; }
.h-0\.5 { height: 0.125rem; }
.max-w-xl { max-width: 36rem; }
.max-w-2xl { max-width: 42rem; }
.max-w-3xl { max-width: 48rem; }
.max-w-4xl { max-width: 56rem; }
.max-w-6xl { max-width: 72rem; }
.min-h-screen { min-height: 100vh; }

/* Layout */
.flex { display: flex; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.flex-col { flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.block { display: block; }
.inline-flex { display: inline-flex; }
.gap-4 { gap: 1rem; }
.space-x-4 > * + * { margin-left: 1rem; }
.space-x-6 > * + * { margin-left: 1.5rem; }
.space-x-8 > * + * { margin-left: 2rem; }
.space-x-10 > * + * { margin-left: 2.5rem; }
.space-y-4 > * + * { margin-top: 1rem; }
.space-y-6 > * + * { margin-top: 1.5rem; }
.transform { transform: translateX(0); }
.hover\:-translate-y-1:hover { transform: translateY(-0.25rem); }
.scale-0 { transform: scale(0); }
.scale-1 { transform: scale(1); }

/* Typography */
.text-xs { font-size: 0.75rem; }
.text-sm { font-size: 0.875rem; }
.text-base { font-size: 1rem; }
.text-lg { font-size: 1.125rem; }
.text-xl { font-size: 1.25rem; }
.text-2xl { font-size: 1.5rem; }
.text-3xl { font-size: 1.875rem; }
.text-4xl { font-size: 2.25rem; }
.text-5xl { font-size: 3rem; }
.text-6xl { font-size: 3.75rem; }
.font-bold { font-weight: 700; }
.font-medium { font-weight: 500; }
.font-mono { font-family: monospace; }
.text-center { text-align: center; }
.no-underline { text-decoration: none; }

/* Spacing */
.p-1 { padding: 0.25rem; }
.p-2 { padding: 0.5rem; }
.p-4 { padding: 1rem; }
.p-6 { padding: 1.5rem; }
.p-8 { padding: 2rem; }
.px-4 { padding-left: 1rem; padding-right: 1rem; }
.px-6 { padding-left: 1.5rem; padding-right: 1.5rem; }
.px-8 { padding-left: 2rem; padding-right: 2rem; }
.py-2 { padding-top: 0.5rem; padding-bottom: 0.5rem; }
.py-3 { padding-top: 0.75rem; padding-bottom: 0.75rem; }
.py-4 { padding-top: 1rem; padding-bottom: 1rem; }
.py-5 { padding-top: 1.25rem; padding-bottom: 1.25rem; }
.py-6 { padding-top: 1.5rem; padding-bottom: 1.5rem; }
.py-20 { padding-top: 5rem; padding-bottom: 5rem; }
.m-1 { margin: 0.25rem; }
.m-2 { margin: 0.5rem; }
.m-4 { margin: 1rem; }
.mx-auto { margin-left: auto; margin-right: auto; }
.mb-2 { margin-bottom: 0.5rem; }
.mb-3 { margin-bottom: 0.75rem; }
.mb-4 { margin-bottom: 1rem; }
.mb-6 { margin-bottom: 1.5rem; }
.mb-8 { margin-bottom: 2rem; }
.mb-10 { margin-bottom: 2.5rem; }
.mb-12 { margin-bottom: 3rem; }
.mt-8 { margin-top: 2rem; }
.mt-12 { margin-top: 3rem; }
.mt-16 { margin-top: 4rem; }
.mr-1 { margin-right: 0.25rem; }
.mr-2 { margin-right: 0.5rem; }
.mr-4 { margin-right: 1rem; }
.mr-8 { margin-right: 2rem; }
.ml-2 { margin-left: 0.5rem; }

/* Components */
.btn-primary {
  padding: 0.75rem 1.5rem;
  border: 2px solid #64ffda;
  color: #64ffda;
  border-radius: 0.25rem;
  font-weight: 500;
  transition: all 0.2s;
  display: inline-block;
  cursor: pointer;
  text-decoration: none;
}
.btn-primary:hover {
  background-color: rgba(100, 255, 218, 0.1);
}

.card {
  background-color: #112240;
  padding: 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.3s;
}
.card:hover {
  transform: translateY(-5px);
}

.section-heading {
  font-size: 1.875rem;
  line-height: 2.25rem;
  font-weight: 700;
  color: #ccd6f6;
  margin-bottom: 2rem;
}
@media (min-width: 768px) {
  .section-heading {
    font-size: 2.25rem;
    line-height: 2.5rem;
  }
}

/* Positioning */
.fixed { position: fixed; }
.absolute { position: absolute; }
.relative { position: relative; }
.top-0 { top: 0; }
.right-0 { right: 0; }
.right-10 { right: 2.5rem; }
.left-0 { left: 0; }
.left-10 { left: 2.5rem; }
.bottom-0 { bottom: 0; }
.-bottom-1 { bottom: -0.25rem; }
.z-10 { z-index: 10; }
.z-50 { z-index: 50; }
.hidden { display: none; }
.overflow-hidden { overflow: hidden; }
.group:hover .group-hover\:w-full { width: 100%; }

/* Responsive */
@media (min-width: 640px) {
  .sm\:inline { display: inline; }
}

@media (min-width: 768px) {
  .md\:block { display: block; }
  .md\:hidden { display: none; }
  .md\:text-5xl { font-size: 3rem; }
}

@media (min-width: 1024px) {
  .lg\:block { display: block; }
  .lg\:text-6xl { font-size: 3.75rem; }
}

/* Effects */
.rounded { border-radius: 0.25rem; }
.rounded-full { border-radius: 9999px; }
.rounded-lg { border-radius: 0.5rem; }
.border { border-width: 1px; }
.border-2 { border-width: 2px; }
.transition-colors { transition-property: color, background-color, border-color; transition-duration: 0.15s; }
.transition-all { transition-property: all; transition-duration: 0.15s; }
.duration-200 { transition-duration: 0.2s; }
.duration-300 { transition-duration: 0.3s; }
.hover\:bg-white\/10:hover { background-color: rgba(255, 255, 255, 0.1); }
.hover\:bg-secondary\/10:hover { background-color: rgba(100, 255, 218, 0.1); }
.hover\:bg-gray-200:hover { background-color: #e5e7eb; }
.cursor-pointer { cursor: pointer; }
